{
  "name": "react-lines-ellipsis",
  "version": "0.15.1",
  "description": "Simple multiline ellipsis component for React.JS",
  "main": "lib/index.js",
  "module": "lib/index.modern.js",
  "files": [
    "lib"
  ],
  "scripts": {
    "test": "prettier --check src docs-src",
    "lint": "prettier --write src docs-src",
    "prebuild": "rm -rf lib; mkdir -p lib",
    "prepare": "npm run build",
    "build": "microbundle -f modern,cjs --no-compress --no-sourcemap --jsx React.createElement src/*.{ts,tsx}",
    "dev:docs": "vite",
    "build:docs": "vite build"
  },
  "keywords": [
    "react",
    "react-component",
    "multiline",
    "ellipsis",
    "dotdotdot",
    "clamp",
    "read-more"
  ],
  "author": "xiaody",
  "license": "MIT",
  "repository": "xiaody/react-lines-ellipsis",
  "peerDependencies": {
    "react": "*",
    "react-dom": "*"
  },
  "devDependencies": {
    "@babel/core": "^7.18.5",
    "@babel/plugin-transform-react-jsx": "^7.17.12",
    "@babel/preset-env": "^7.18.2",
    "@types/react": "^18.0.12",
    "@types/react-dom": "^18.0.5",
    "lodash-es": "^4.17.21",
    "microbundle": "^0.15.0",
    "prettier": "^2.7.1",
    "react": "^18.1.0",
    "react-dom": "^18.1.0",
    "vite": "^2.9.13"
  },
  "engines": {
    "node": ">=16",
    "npm": ">=8"
  },
  "dependencies": {
    "@types/lodash-es": "^4.17"
  }
}
